{
  "name": "campground-availability-checker",
  "version": "1.0.0",
  "description": "Check campsite availability at Barrett Cove, Lake McClure (Campspot)",
  "main": "check-availability.js",
  "scripts": {
    "check": "node check-availability.js",
    "check:visible": "node check-availability.js --no-headless",
    "loop": "node check-availability.js --loop --notify",
    "loop:fast": "node check-availability.js --loop --interval 5 --notify"
  },
  "dependencies": {
    "puppeteer": "^22.0.0"
  }
}
